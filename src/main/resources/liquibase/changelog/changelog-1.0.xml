<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="extfrg" id="1.0-0">
        <sql endDelimiter=";">
            CREATE SCHEMA IF NOT EXISTS nsg
        </sql>
    </changeSet>

    <changeSet author="extfrg" id="1.0-1">
        <createTable tableName="company" schemaName="nsg">
            <column autoIncrement="true" name="_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="company_pkey"/>
            </column>
            <column name="orgno" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet author="extfrg" id="1.0-2">
        <createTable tableName="transaction" schemaName="nsg">
            <column autoIncrement="true" name="_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="transaction_pkey"/>
            </column>
            <column name="_companyid" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet author="extfrg" id="1.0-3">
        <addForeignKeyConstraint baseColumnNames="_companyid" baseTableName="transaction" baseTableSchemaName="nsg"
                                 constraintName="nsg_t_c_fk" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="_id" referencedTableName="company" referencedTableSchemaName="nsg"/>
    </changeSet>

    <changeSet author="extfrg" id="1.0-4">
        <createTable tableName="document" schemaName="nsg">
            <column autoIncrement="true" name="_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="document_pkey"/>
            </column>
            <column name="_transactionid" type="INT"/>
            <column name="documenttype" type="INT"/>
            <column name="documentid" type="TEXT"/>
            <column name="original" type="bytea"/>
            <column name="xbrl" type="CLOB"/>
            <column name="issuedate" type="DATE"><constraints nullable="true"/></column>
            <column name="duedate" type="DATE"><constraints nullable="true"/></column>
        </createTable>
    </changeSet>

    <changeSet author="extfrg" id="1.0-5">
        <addForeignKeyConstraint baseColumnNames="_transactionid" baseTableName="document" baseTableSchemaName="nsg"
                                 constraintName="nsg_d_t_fk" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="_id" referencedTableName="transaction" referencedTableSchemaName="nsg"/>
    </changeSet>

    <changeSet author="extfrg" id="1.0-6">
        <createTable tableName="documentrow" schemaName="nsg">
            <column autoIncrement="true" name="_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="documentrow_pkey"/>
            </column>
            <column name="_documentid" type="INT"/>
            <column name="amount" type="FLOAT"><constraints nullable="true"/></column>
            <column name="currency" type="TEXT"><constraints nullable="true"/></column>
            <column name="account" type="TEXT"><constraints nullable="true"/></column>
        </createTable>
    </changeSet>

    <changeSet author="extfrg" id="1.0-7">
        <addForeignKeyConstraint baseColumnNames="_documentid" baseTableName="documentrow" baseTableSchemaName="nsg"
                                 constraintName="nsg_dr_d_fk" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="_id" referencedTableName="document" referencedTableSchemaName="nsg"/>
    </changeSet>

</databaseChangeLog>